{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2021",
    "sourceMap": false,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2021"
    ]
  },
  "include": [
    "**/*.js",
    "tests/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
